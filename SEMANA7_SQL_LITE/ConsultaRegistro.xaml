<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA7_SQL_LITE.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListaUsuario" ItemSelected="OnSelection">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}">
                            
                        </TextCell>
                    </DataTemplate>
                    
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"></Button>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>